{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2016",
      "es2015",
      "es2017"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "lodash.isequal"
    ],
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./src/tests/**",
    "./src/mocks/**"
  ]
}
